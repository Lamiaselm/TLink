<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="2dp"
        android:padding="16dp">

        <ImageView

            android:id="@+id/image_select_offer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_sports_car" />

        <TextView
            android:id="@+id/name_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/image_select_offer"
            android:layout_toRightOf="@+id/image_select_offer"
            android:text="Nom prénom:"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_ref_select_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_offer"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/image_select_offer"
            android:layout_toRightOf="@+id/image_select_offer"
            android:text="Heure de départ"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/prix_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_offer"
            android:layout_marginStart="176dp"
            android:layout_marginLeft="176dp"
            android:layout_marginTop="-12dp"
            android:layout_toEndOf="@id/image_select_offer"
            android:layout_toRightOf="@+id/image_select_offer"
            android:text="1500DA"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
